#include "buttonmatrix.h"


int scanButton()
{
	int button = ~0;

	for(int col = 0; col < NUM_COLUMNS; col++)
	{
		//Write columns high

		for(int row = 0; row < NUM_ROWS; row++)
		{
			if(/*Read row*/)
			{
				while(/*Read row*/);
				goto breakLoop;
			}
		}
	}

	breakLoop:

	return button;
}

